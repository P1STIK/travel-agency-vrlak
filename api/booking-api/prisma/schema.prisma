// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  PENDING
  PAID
  CONFIRMED
  CANCELLED
  REFUNDED
}

model Booking {
  id            String        @id @default(cuid())
  code          String        @unique
  departureId   String
  tourSlug      String?
  email         String
  seats         Int
  unitPriceCents Int
  totalAmount   Int
  currency      String        @default("EUR")
  status        BookingStatus @default(PENDING)
  paymentRef    String?
  passengers    Passenger[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Passenger {
  id        String   @id @default(cuid())
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  bookingId String
  firstName String
  lastName  String
}

model Tour {
  id          String      @id @default(cuid())
  slug        String      @unique
  title       String
  teaser      String?
  description String?
  currency    String      @default("EUR")
  heroImage   String?
  thumbImage  String?
  duration    String?
  pickupPoints String[]   // ak nechceš array, zmeň na String? a ulož CSV
  gallery     String[]    // voliteľné, pre mini-galériu
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  departures  Departure[]
}

model Departure {
  id             String   @id @default(cuid())
  date           DateTime
  unitPriceCents Int
  tourId         String
  tour           Tour     @relation(fields: [tourId], references: [id])

  @@index([tourId])
}

